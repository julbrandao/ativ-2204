<h1>Turmas</h1>

<a href="/turmas/add" class="btn btn-success mb-3">Add Turma</a>
<table class="table table-bordered">

    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% turmas.forEach(turma=> { %>
            <tr>
                <td>
                    <%= turma.id %>
                </td>
                <td>
                    <%= turma.nome %>
                </td>
                <td>
                    <a href="/turmas/edit/<%= turma.id %>" class="btn btn-primary btn-sm">Editar</a>
                    <form action="/turmas/delete/<%= turma.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>

            <% }) %>
    </tbody>
</table>